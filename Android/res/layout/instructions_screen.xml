<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paws_swipe_left_no_text"
    tools:context="com.example.tictacpaw.MainActivity"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

    </LinearLayout>

    <TextView
        android:id="@+id/textView000"
        android:layout_width="329dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Try to create 3 X&apos;s in a row - but be fast! Only if your time is under the time limit set by the mode you can move to the next level!
        Easy: less than 10 seconds
        Medium: less than 7 seconds
        Hard: less than 5 seconds "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</RelativeLayout>
